<!--pages/search/search.wxml-->
<text>Search User</text>
<form bindsubmit="formSubmit" bindreset="formReset">


  <view class="section">
    <view class="section__title">姓名</view>
    <input name="name" placeholder="please input here" />
  </view>

  <view class="section">
    <view class="section__title">手机号码</view>
    <input name="phone" placeholder="please input here" />
  </view>

  <view class="section">
    <view class="section__title">身份证号码</view>
    <input name="identitycard" placeholder="please input here" />
  </view>

  <view class="btn-area">
    <button formType="submit">Submit</button>
    <button formType="reset">Reset</button>
  </view>
</form>
