<!--index.wxml-->
<view class="page">
    <view class="userinfo">
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>

    <view>
        <view class="weui-cells__title">个人信息</view>
        <view wx:if="{{login}}" class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">姓名</view>
                </view>
                <view class="weui-cell__bd">
                    <text class="weui-input">{{user.name}}</text>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">性别</view>
                </view>
                <view class="weui-cell__bd">
                    <text class="weui-input">{{user.gender}}</text>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">婚恋状态</view>
                </view>
                <view class="weui-cell__bd">
                    <text class="weui-input">{{user.love_status}}</text>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">余额</view>
                </view>
                <view class="weui-cell__bd">
                    <text class="weui-input">{{user.balance}}</text>
                </view>
            </view>
        </view>
        <view wx:else>
            <navigator url='../register/register'>
                <button class="weui-btn" type="primary">点击注册</button>
            </navigator>
        </view>
    </view>

    <view wx:if="{{login}}" class="page__bd" style="margin-top: 20px;">
        <view class="weui-cells__title">应用服务</view>
        <view class="weui-grids">
            <navigator class='userinfo-nav' hover-class="weui-grid_active" url='../user_info/user_info'>
                个人信息
            </navigator>
            <navigator class='userinfo-nav' hover-class="weui-grid_active" url='../pair_apply/pair_apply'>
                配对申请
            </navigator>
            <navigator class='userinfo-nav' hover-class="weui-grid_active" url='../pairquery/pairquery'>
                配对查询
            </navigator>
            <navigator class='userinfo-nav' hover-class="weui-grid_active" url='../message/message'>
                系统消息
            </navigator>
            <view class='userinfo-nav' hover-class="weui-grid_active" bindtap='closeAccount'>
                用户注销
            </view>
        </view>
    </view>
</view>